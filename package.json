{
  "name": "nextjs-minimal-template",
  "version": "1.0.0",
  "description": "A modern, minimal Next.js template with TypeScript, Tailwind CSS v4, and essential features for rapid development. Optimized for AI-assisted development and quick project bootstrapping.",
  "keywords": [
    "nextjs",
    "typescript",
    "tailwind",
    "template",
    "starter",
    "minimal",
    "ai-friendly",
    "ai-assisted",
    "cursor",
    "copilot",
    "claude",
    "chatgpt"
  ],
  "author": "thisisutkarsh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/nextjs-minimal-template.git"
  },
  "private": false,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --fix",
    "lint:check": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf .next out node_modules/.cache",
    "setup": "npm install && npm run dev",
    "postbuild": "next-sitemap"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.511.0",
    "next": "^14.2.28",
    "next-sitemap": "^4.2.3",
    "next-themes": "^0.4.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.0.2"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@types/node": "^22.14.1",
    "@types/react": "18.3.1",
    "@types/react-dom": "18.3.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.28",
    "postcss": "^8.5.6",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.17.0"
  }
}